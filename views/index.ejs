<!DOCTYPE html>
<html lang="ja">
	<head>
		<%- include( "./head" ); %>
		<title>Node Advanced Blog</title>
	</head>
	<body>
		<header>Node Advanced Blog</header>
		<main>
			<div class="grid-container">
				<% allBlogs.forEach( ( blog ) => { %>
					<div class="card">
						<a href="/blog/<%= blog._id %>">
							<img src="/public/images<%= blog.image %>" alt="blog-image"/>
							<div class="text-area">
								<h2><%= blog.title %></h2>
								<p><%= blog.summary %></p>
							</div>
						</a>
					</div>
				<% } ); %>
			</div>
			<div class="bottom">
				<% if ( session !== undefined ) { %>
					<a href="/new" class="create-button">記事を書く</a>
				<% } %>
				<% if ( session === undefined ) { %>
					<a href="/user/login" class="login-button">ログイン</a>
					<a href="/new" class="user-create-button">ユーザ登録する</a>
				<% } %>
			</div>
		</main>
		<footer>Footer</footer>
	</body>
</html>
